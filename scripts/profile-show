#!/usr/bin/env bash
set -euo pipefail

if [[ $# -lt 1 ]]; then
  echo "Usage: scripts/profile-show <node-cli|next-app|github-action>"
  exit 1
fi

profile="$1"
root_dir="$(cd "$(dirname "$0")/.." && pwd)"
profile_file="$root_dir/profiles/$profile/profile.json"

if [[ ! -f "$profile_file" ]]; then
  echo "Unknown profile: $profile"
  exit 1
fi

jq '{name,description,release_type,setup_node,ci_commands,required_scripts,template}' "$profile_file"
